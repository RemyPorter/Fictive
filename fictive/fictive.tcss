.active {
	display: block;
}

.inactive {
	display: none;
}

#Peek {
	border: round $foreground-muted;
	height: 100%;
	width: 30%;
}

#State {
	height: 4fr;
	border: round $text-primary;
}

#Substate {
	height: 3fr;
	border: round $text-secondary;
}


#Transient {
	height: 1fr;
	border: round $text-accent;
}

GamePicker > Markdown { 
	height: 1fr; 
	border: round $foreground-muted
}
GamePicker > GameList { 
	height: 6fr; 
	padding-left: 2;
	padding-right: 2;
	align: center top;
	border: round $foreground-muted
}

#banner {
	height: 2fr;
	align: right middle;
	padding-left: 5;
}

GamePicker > Static {
	color: cyan;
}